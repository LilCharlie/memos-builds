# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
# (Don't specify an indent_size here; that has too many unintended consequences.)

[*.{md,yml,yaml,sh,toml}]
indent_style = space
indent_size = 2

[*.py]
max_line_length = 96
indent_style = space
indent_size = 4

[.{gitignore,gitattributes}]
indent_style = tab
indent_size = 8
